<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/button_today"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_days_background"
            android:textColor="@color/dark_text_color"
            android:layout_weight="1"
            android:text="Today" />
        
        <Button
            android:id="@+id/button_day1"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_days_background"
            android:textColor="@color/dark_text_color"
            android:layout_weight="1"
            android:text="Day1" />

        <Button
            android:id="@+id/button_day2"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_days_background"
            android:textColor="@color/dark_text_color"
            android:layout_weight="1"
            android:text="Day2" />
        
        <Button
            android:id="@+id/button_day3"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_days_background"
            android:textColor="@color/dark_text_color"
            android:layout_weight="1"
            android:text="Day3" />
        
        <Button
            android:id="@+id/button_day4"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_days_background"
            android:textColor="@color/dark_text_color"
            android:layout_weight="1"
            android:text="Day4" />
        
        <Button
            android:id="@+id/button_day5"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_days_background"
            android:textColor="@color/dark_text_color"
            android:layout_weight="1"
            android:text="Day5" />
        
        <Button
            android:id="@+id/button_day6"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textSize="14sp"
            android:textStyle="bold"            
            android:background="@drawable/button_days_background"
            android:textColor="@color/dark_text_color"
            android:layout_weight="1"
            android:text="Day6" />
        
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
  	
  	<ListView
        android:id="@+id/listview_delivery_cell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dp" >
        
    </ListView>
    
</LinearLayout>