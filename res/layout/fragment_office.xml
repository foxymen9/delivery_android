<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<SearchView
	    android:id="@+id/searchview_office"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:clickable="true"
	    android:layout_alignParentTop = "true">
	</SearchView>
	
	<View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/searchview_office" />
   		
   	<ListView
        android:id="@+id/listview_office"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_line1"
        android:layout_above="@+id/view_line2">
        
    </ListView>


   	<View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_above="@+id/button_add_company" />
    
	<Button
        android:id="@+id/button_add_company"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom = "true"        
    	android:layout_marginTop="10dp"
    	android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_selector_background"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Add Company"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
    
</RelativeLayout>