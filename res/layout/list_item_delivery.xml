<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical" >

    <com.delivery.AsyncImageLoad.AsyncThumbnailView
        android:id="@+id/imageview_office_logo"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="test"
        android:src="@drawable/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical" >
            
            <TextView
		        android:id="@+id/textview_delivery_time_desc"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:textSize="14sp"
		        android:textColor="@color/dark_text_color"
		        android:text="Delivery time : " />
            
            <TextView
		        android:id="@+id/textview_delivery_time_value"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:textColor="#000000"
		        android:textSize="14sp"
		        android:textStyle="bold"
		        android:text="Text" />
		            
			            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >
            
            <TextView
		        android:id="@+id/textview_order_time_desc"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
				android:textColor="@color/dark_text_color"
		        android:textSize="14sp"
		        android:text="Order by : " />
            
            <TextView
		        android:id="@+id/textview_order_time_value"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:textColor="@color/dark_text_color"
		        android:textSize="14sp"
		        android:text="Text" />
		            
        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>