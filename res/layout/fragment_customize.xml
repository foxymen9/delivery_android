<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_customize_decription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="* Required fields are marked with a star"
        android:textColor="@color/dark_text_color"
        android:textSize="10sp" />

    <ScrollView
        android:id="@+id/scrollview_customize_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textview_customize_decription"
        android:layout_above="@+id/linearlayout_actions">

        <LinearLayout
            android:id="@+id/linearlayout_customize_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
        </LinearLayout>
        
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearlayout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Special Instructions:" />
    
	    <EditText
	        android:id="@+id/edittext_special_instructions"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="10dp"
	        android:background="@drawable/rectangle_border"
	        android:ems="10"
	        android:inputType="textMultiLine" >
	    </EditText>
	    
	    <View
	        android:id="@+id/view_line"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@android:color/darker_gray" />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:gravity="center_horizontal">
	
	        <Button
	            android:id="@+id/button_next_item"
	            android:layout_width="wrap_content"
	            android:layout_height="30dp"
	            android:background="@drawable/button_selector_background"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:text="Next Item"
	            android:textColor="@android:color/white"
	            android:textSize="14sp" />
	
	        <Button
	            android:id="@+id/button_checkout"
	            android:layout_width="wrap_content"
	            android:layout_height="30dp"
	            android:layout_marginLeft="30dp"
	            android:background="@drawable/button_selector_background"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:text="Checkout"
	            android:textColor="@android:color/white"
	            android:textSize="14sp" />
	    </LinearLayout>
	
	</LinearLayout>

</RelativeLayout>