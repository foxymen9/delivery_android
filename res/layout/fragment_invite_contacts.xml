<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listview_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearlayout_container"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dp" >
    </ListView>

    <LinearLayout
        android:id="@+id/linearlayout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >
	    
	    <View
	        android:id="@+id/view_line"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@android:color/darker_gray" />
	    
        <Button
            android:id="@+id/button_send_invitations"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"  
            android:background="@drawable/button_selector_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Send Invitations"
            android:textColor="@android:color/white"
            android:textSize="14sp" />    
	
	</LinearLayout>

</RelativeLayout>