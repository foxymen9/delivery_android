<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Promotion Code" />

    <EditText
        android:id="@+id/edittext_promotion_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageview_logo"
        android:hint="Enter Coupon Code"
        android:paddingLeft ="10dp"
        android:paddingRight ="10dp"
        android:paddingTop ="10dp"
        android:paddingBottom ="10dp"
        android:textSize="14sp"
        android:ems="10"
        android:background="#ffffff"/>

	<TextView
        android:id="@+id/textview_code_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >
        
        <Button
            android:id="@+id/button_promotion_close"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/button_selector_background"
            android:text="Close"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
	
	    <Button
	        android:id="@+id/button_promotion_apply_code"
	        android:layout_width="100dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="30dp"
	        android:background="@drawable/button_selector_background"
	        android:text="Apply Code"
	        android:textColor="@android:color/white"
	        android:textSize="14sp" />
	    
    </LinearLayout>
        
</LinearLayout>